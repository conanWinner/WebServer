{
  "server": {
    "listen": 8080,
    "serverName": "localhost",
    "webroot": "WebRoot",
    "locations": [
      {
        "path": "/",
        "root": "WebRoot",
        "index": "index.html"
      },
      {
        "path": "/api",
        "proxyPass": "http://localhost:3000"
      }
    ],
    "errorLog": "/var/log/server/error.log",
    "accessLog": "/var/log/server/access.log"
  },
  "loadBalancer": {
    "strategy": "RoundRobin",
    "backendServers": [
      "http://localhost:8081",
      "http://localhost:8082",
      "http://localhost:8083"
    ]
  }
}
